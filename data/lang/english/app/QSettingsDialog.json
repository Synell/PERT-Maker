    "QSidePanel": {
        "appearance": {
            "title": "Appearance",
            "QLabel": {
                "language": {
                    "title": "Language",
                    "description": "Select a display language for PERT Maker."
                },
                "theme": {
                    "title": "Theme",
                    "description": "Select a display theme for PERT Maker."
